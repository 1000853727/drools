package org.drools;

import org.drools.StockTick;

global java.util.List results;

declare StockTick
    @role( event )
end

rule "Test entry point modify event"
    #dialect "mvel"
when
    $st : StockTick( company == "ACME", price > 10 ) from entry-point StockStream
then
    modify( $st ){
        setPrice(10)
    }
    #modify ( $st ){
    #    price = 10
    #}
    results.add( $st );
end

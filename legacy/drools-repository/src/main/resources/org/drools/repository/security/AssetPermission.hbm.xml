<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>

    <class name="org.drools.repository.security.AssetPermission" table="DROOLS_PERMISSIONS">
    	<id name="id" column="PERMISSION_ID">
    		<generator class="native" />
    	</id>
    	
        <property name="assetType" type="string" />
        <property name="assetId" type="serializable" index="true"/>
        <property name="permission" />
        
    </class>

</hibernate-mapping>        
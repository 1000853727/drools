package org.drools.examples.wumpus

import org.drools.examples.wumpus.SensorArray
import org.drools.examples.wumpus.Move
import org.drools.examples.wumpus.MoveCommand

dialect "mvel"

rule "init" when
then
    channels["commands"].send( new MoveCommand( Move.TURN_LEFT ) );
end

rule "Send SensorArray" when
    $sa : SensorArray()
then
    System.out.println( $sa );
    retract( $sa );
end    
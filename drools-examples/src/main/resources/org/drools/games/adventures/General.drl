package org.kie.games.adventures

import org.kie.games.adventures.Request;
import org.kie.games.adventures.Response;
import org.kie.games.adventures.SessionCharacter

dialect "mvel"

rule updateUserSession when
    $us : UserSession()
    not SessionCharacter( session == $us )    
then
    s = new SessionCharacter();
    s.session = $us;
    insert( s );
end


rule updateCharacters salience 5 when
    $chars : List() from collect( Character() )
    $us : UserSession( )    
then
   $us.channels["characters"].send( $chars ); 
end 
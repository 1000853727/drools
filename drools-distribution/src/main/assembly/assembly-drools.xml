<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>assembly-drools</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>
    <fileSet><!-- Note: going outside the module dir is bad, but it is not fetching generated files -->
      <includes>
        <include>../LICENSE-ASL-2.0.txt</include>
      </includes>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
      <outputDirectory>examples</outputDirectory>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>dos</lineEnding>
      <filtered>true</filtered>
      <outputDirectory>examples</outputDirectory>
      <includes>
        <include>**/*.bat</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/docs</directory>
      <filtered>true</filtered>
      <outputDirectory/>
    </fileSet>
    <!-- Examples -->
    <fileSet><!-- Note: going outside the module dir is bad, but it is not fetching generated files -->
      <directory>../drools-examples/drools-expert-examples</directory>
      <outputDirectory>examples/sources/drools-expert-examples</outputDirectory>
      <excludes>
        <exclude>target/**</exclude>
        <exclude>local/**</exclude>
        <exclude>.*/**</exclude>
        <exclude>nbproject/**</exclude>
        <exclude>*.ipr</exclude>
        <exclude>.*.iws</exclude>
        <exclude>*.iml</exclude>
        <exclude>.git/**</exclude>
      </excludes>
    </fileSet>
    <fileSet><!-- Note: going outside the module dir is bad, but it is not fetching generated files -->
      <directory>../drools-examples/drools-fusion-examples</directory>
      <outputDirectory>examples/sources/drools-fusion-examples</outputDirectory>
      <excludes>
        <exclude>target/**</exclude>
        <exclude>local/**</exclude>
        <exclude>.*/**</exclude>
        <exclude>nbproject/**</exclude>
        <exclude>*.ipr</exclude>
        <exclude>.*.iws</exclude>
        <exclude>*.iml</exclude>
        <exclude>.git/**</exclude>
      </excludes>
    </fileSet>
    <!-- Reference manual -->
    <fileSet><!-- TODO use dependencySet instead https://issues.jboss.org/browse/MPJDOCBOOK-65-->
      <directory>../drools-docs/drools-expert-docs/target/docbook/publish/en-US</directory>
      <outputDirectory>reference_manual/drools-expert-docs</outputDirectory>
    </fileSet>
    <fileSet><!-- TODO use dependencySet instead https://issues.jboss.org/browse/MPJDOCBOOK-65-->
      <directory>../drools-docs/drools-fusion-docs/target/docbook/publish/en-US</directory>
      <outputDirectory>reference_manual/drools-fusion-docs</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <excludes>
        <exclude>org.drools:drools-expert-examples</exclude>
        <exclude>org.drools:drools-fusion-examples</exclude>
        <exclude>org.drools:drools-expert-docs</exclude>
        <exclude>org.drools:drools-fusion-docs</exclude>
        <exclude>*:*:jar:javadoc</exclude>
        <exclude>*:*:jar:sources</exclude>
      </excludes>
      <outputDirectory>binaries</outputDirectory>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools:drools-expert-examples</include>
        <include>org.drools:drools-fusion-examples</include>
      </includes>
      <outputDirectory>examples/binaries</outputDirectory>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools:knowledge-api:jar:javadoc</include>
      </includes>
      <outputDirectory>javadoc/public</outputDirectory>
      <unpack>true</unpack>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <!-- TODO internal api javadocs: note that they must be added as dependencies in the pom too -->
    <!--<dependencySet>-->
      <!--<includes>-->
        <!--<include>org.drools:*:jar:javadoc</include>-->
      <!--</includes>-->
      <!--<excludes>-->
        <!--<exclude>org.drools:knowledge-api:jar:javadoc</exclude>-->
      <!--</excludes>-->
      <!--<outputDirectory>javadoc/internal</outputDirectory>-->
      <!--<unpack>true</unpack>-->
      <!--<useStrictFiltering>true</useStrictFiltering>-->
    <!--</dependencySet>-->
    <dependencySet>
      <includes>
        <include>org.drools:*:jar:sources</include>
      </includes>
      <excludes>
        <exclude>org.drools:drools-expert-examples:jar:sources</exclude>
        <exclude>org.drools:drools-fusion-examples:jar:sources</exclude>
      </excludes>
      <outputDirectory>sources</outputDirectory>
      <unpack>true</unpack>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
  </dependencySets>

</assembly>

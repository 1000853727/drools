<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>assembly-drools</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <includes>
        <include>../LICENSE-ASL-2.0.txt</include>
      </includes>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
      <outputDirectory>examples</outputDirectory>
      <includes>
        <include>**/*.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/scripts</directory>
      <lineEnding>dos</lineEnding>
      <filtered>true</filtered>
      <outputDirectory>examples</outputDirectory>
      <includes>
        <include>**/*.bat</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/docs</directory>
      <filtered>true</filtered>
      <outputDirectory/>
    </fileSet>
    <!-- Examples -->
    <fileSet>
      <directory>../drools-planner-examples/data</directory>
      <outputDirectory>examples/data</outputDirectory>
      <includes>
        <include>**/input/*.*</include>
        <include>**/unsolved/*.xml</include>
        <include>**/solved/*.xml</include>
        <include>**/output/*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../drools-planner-examples</directory>
      <outputDirectory>examples/sources</outputDirectory>
      <excludes>
        <exclude>data/**</exclude>
        <exclude>target/**</exclude>
        <exclude>local/**</exclude>
        <exclude>.*/**</exclude>
        <exclude>nbproject</exclude>
        <exclude>*.ipr</exclude>
        <exclude>.*.iws</exclude>
        <exclude>*.iml</exclude>
        <exclude>.git/**</exclude>
      </excludes>
    </fileSet>
    <!-- Reference manual -->
    <fileSet>
      <directory>../drools-planner-docs/target/docbook/publish/en-US</directory>
      <outputDirectory>reference_manual</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <excludes>
        <exclude>org.drools.planner:drools-planner-examples</exclude>
        <exclude>org.drools.planner:drools-planner-docs</exclude>
        <exclude>*:javadoc</exclude>
        <exclude>*:sources</exclude>
      </excludes>
      <outputDirectory>binaries</outputDirectory>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools.planner:drools-planner-examples</include>
      </includes>
      <outputDirectory>examples/binaries</outputDirectory>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools.planner:drools-planner-core:*:javadoc</include>
      </includes>
      <outputDirectory>javadoc</outputDirectory>
      <unpack>true</unpack>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.drools.planner:drools-planner-core:*:sources</include>
      </includes>
      <outputDirectory>sources</outputDirectory>
      <unpack>true</unpack>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
  </dependencySets>

</assembly>

<refnamediv>
<refname>callout.graphics.path</refname>
<refpurpose>Path to callout graphics</refpurpose>
</refnamediv>

<refsynopsisdiv>
<src:fragment xml:id="callout.graphics.path.frag">
<xsl:param name="callout.graphics.path" select="'images/callouts/'"/>

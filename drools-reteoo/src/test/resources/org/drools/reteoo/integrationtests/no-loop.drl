package org.drools.compiler.test;

import org.drools.compiler.Cheese;

global java.util.List list

rule "Do  not loop  forever"
    no-loop true
    when
        cheese : Cheese( )
    then     
        list.add( cheese );
        if ( list.size() > 2 ) {
            drools.halt();
        }
        update( cheese );
end  
